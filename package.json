{
  "name": "word-wave",
  "version": "0.1.0",
  "description": "High-performance canvas text wave animation driven by simplex noise",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "knip": "knip",
    "duplication": "jscpd src/",
    "check": "tsc --noEmit && eslint src/ && prettier --check src/ && knip && jscpd src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "canvas",
    "animation",
    "wave",
    "text",
    "particles",
    "simplex-noise"
  ],
  "author": "Ricardo Daniel Monteiro Sim√µes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RicardoMonteiroSimoes/word-wave.git"
  },
  "dependencies": {
    "simplex-noise": "^4.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "jscpd": "^4.0.8",
    "knip": "^5.84.0",
    "prettier": "^3.8.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.56.0"
  }
}
